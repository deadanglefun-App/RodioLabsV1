{
  "dashboard": {
    "id": null,
    "title": "RODIO Oracle Network Dashboard",
    "tags": ["rodio", "iot", "oracle", "blockchain"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Network Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "rodio_node_health",
            "legendFormat": "{{node_id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Consensus Success Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "rodio_consensus_success_rate",
            "legendFormat": "Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.8},
                {"color": "green", "value": 0.95}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Sensor Readings Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(rodio_sensor_readings_total[5m])",
            "legendFormat": "{{sensor_type}} - {{node_id}}"
          }
        ],
        "yAxes": [
          {
            "label": "Readings/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Blockchain Transaction Success",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(rodio_transactions_success[5m])",
            "legendFormat": "Successful Transactions"
          },
          {
            "expr": "rate(rodio_transactions_failed[5m])",
            "legendFormat": "Failed Transactions"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Node Performance Metrics",
        "type": "table",
        "targets": [
          {
            "expr": "rodio_uptime_seconds",
            "legendFormat": "{{node_id}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 6,
        "title": "Data Quality Score",
        "type": "graph",
        "targets": [
          {
            "expr": "rodio_data_quality_score",
            "legendFormat": "{{sensor_type}}"
          }
        ],
        "yAxes": [
          {
            "label": "Quality Score",
            "min": 0,
            "max": 1
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}